[Unit]
Description=GPSNav API Service
After=network.target
Wants=network-online.target

[Service]
Type=simple
EnvironmentFile=/etc/gpsnav/api.env
ExecStart=/usr/local/bin/api
WorkingDirectory=/var/lib/gpsnav
Restart=on-failure
RestartSec=3
User=www-data
Group=www-data
AmbientCapabilities=CAP_NET_BIND_SERVICE
NoNewPrivileges=true

[Install]
WantedBy=multi-user.target

